<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PCToolsManager"
        xmlns:UserControls="clr-namespace:PCToolsManager.UserControls" x:Class="PCToolsManager.MainWindow"
        mc:Ignorable="d"
        Title="MainWindow" Height="350" Width="525">
    <DockPanel>
        <TabControl x:Name="tcMain" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <TabItem Header="Main">
                <Grid Background="#FFE5E5E5">
                    <UserControls:IniCheckField x:Name="iniCheckField" Content="IniCheckField" Margin="10,10,0,0" Width="217" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <UserControls:IniTextField x:Name="IniTextField" HorizontalAlignment="Left" Margin="10,30,0,0" VerticalAlignment="Top" Width="217"/>
                </Grid>
            </TabItem>
            <TabItem Header="Settings" Height="22" VerticalAlignment="Bottom">
                <Grid Background="#FFE5E5E5"/>
            </TabItem>
        </TabControl>
    </DockPanel>
</Window>
