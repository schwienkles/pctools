<UserControl x:Class="PCToolsManager.UserControls.IniTextField"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:PCToolsManager.UserControls"
             mc:Ignorable="d" 
             d:DesignHeight="25" d:DesignWidth="200">
    <Grid>
          <Grid.RowDefinitions>
              <RowDefinition Height="Auto"></RowDefinition>
          </Grid.RowDefinitions>  
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label x:Name="Label" Grid.Row="0" Grid.Column="0" HorizontalAlignment="Right" Content="key name"></Label>
        <TextBox x:Name="TextBox" Grid.Row="0" Grid.Column="1" HorizontalAlignment="Stretch" Margin="3"></TextBox>
    </Grid>
</UserControl>
